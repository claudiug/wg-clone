<p id="notice"><%= notice %></p>

<h1>Listing Advertises</h1>

<table>
  <thead>
    <tr>
      <th>Price</th>
      <th>Duration</th>
      <th>From date</th>
      <th>Until date</th>
      <th>Active</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @advertises.each do |advertise| %>
      <tr>
        <td><%= advertise.price %></td>
        <td><%= advertise.duration %></td>
        <td><%= advertise.from_date %></td>
        <td><%= advertise.until_date %></td>
        <td><%= advertise.active %></td>
        <td><%= link_to 'Show', advertise %></td>
        <td><%= link_to 'Edit', edit_advertise_path(advertise) %></td>
        <td><%= link_to 'Destroy', advertise, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

